<Page x:Class="Monthly_Claims_System.VerifyApprovePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Verify  Approve Claims">

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Verify  Approve Claims"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <Button Content="Verify Claim" Width="150" Margin="0,5,0,5" Click="Verify_Click"/>
            <Button Content="Approve Claim" Width="150" Margin="0,5,0,5" Click="Approve_Click"/>
            <Button Content="Reject Claim" Width="150" Margin="0,5,0,5" Click="Reject_Click"/>
        </StackPanel>
    </Grid>
</Page>
