<Page x:Class="Monthly_Claims_System.LecturerSubmitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lecturer Submit Page">

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Submit Monthly Claim"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Module Code"/>
            <TextBox x:Name="ModuleCodeTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Hours Worked"/>
            <TextBox x:Name="HoursWorkedTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Rate"/>
            <TextBox x:Name="RateTextBox" Margin="0,5,0,10"/>

            <Button Content="Submit Claim" Margin="0,10,0,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>

