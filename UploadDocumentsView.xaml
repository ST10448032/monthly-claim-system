<Page x:Class="Monthly_Claims_System.UploadDocumentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Upload Documents">

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Upload Supporting Documents"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <Button Content="Choose File" Margin="0,10,0,0" Click="ChooseFile_Click"/>
            <TextBlock x:Name="SelectedFilePathTextBlock" Text="No file chosen" Margin="0,5,0,10"/>
            <Button Content="Upload" Margin="0,5,0,0" Click="Upload_Click"/>
        </StackPanel>
    </Grid>
</Page>
