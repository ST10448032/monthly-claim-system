<Page x:Class="Monthly_Claims_System.TrackStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Track Status">

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Track Claim Status"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Enter Claim ID:"/>
            <TextBox x:Name="ClaimIdTextBox" Width="200" Margin="0,5,0,10"/>

            <Button Content="Check Status" Width="120" Click="CheckStatus_Click"/>
            <TextBlock x:Name="StatusResultTextBlock" Text="Status will appear here"
                       Margin="0,10,0,0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
